<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/dashrel"
    >
    
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dasha" android:layout_alignParentTop="true">
  
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="top" android:layout_height="fill_parent">
   	<Button android:id="@+id/getnow"  android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:textSize="32dip" android:textColor="#000000" android:text="Get"/>
   	<Button android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:textSize="32dip" android:textColor="#000000" android:text="Recent" android:id="@+id/getrecent"/>
   </LinearLayout>
   
   </LinearLayout>
   
   <ScrollView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:scrollbars="vertical"
    android:layout_below="@+id/dasha"
    android:layout_above="@+id/dashb"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:gravity="top"
    android:id="@+id/dashc" android:layout_height="wrap_content">
   <TextView android:layout_width="fill_parent" android:paddingLeft="2px" android:text="connectionstatus_text" android:id="@+id/connectionstatus_text" android:textSize="20px" android:textStyle="bold|italic"  android:layout_height="wrap_content"/>
   </ScrollView>
   
      
   <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:scrollbars="vertical"
    android:gravity="top"
    android:id="@+id/dashb"  android:layout_alignParentBottom="true" android:layout_height="wrap_content">
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="top" android:layout_height="wrap_content">
    <Button android:id="@+id/main__button" android:layout_width="fill_parent" android:textSize="36dip" android:textColor="#000000" android:text=" " android:layout_weight="1" android:layout_height="wrap_content"></Button>
   	<EditText android:text="" android:id="@+id/main_search" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="#000000" android:freezesText="true" android:layout_weight="1" android:singleLine="true" android:textSize="36dip"/>
   	<Button android:id="@+id/main_searchbutton" android:layout_width="fill_parent" android:textSize="36dip" android:textColor="#000000" android:text="Find" android:layout_weight="1" android:layout_height="wrap_content"/>
   </LinearLayout>


	</LinearLayout>
</RelativeLayout>

